# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /trylock/:key				controllers.Application.trylock(key:String)
GET		/tryandrelease/:key			controllers.Application.tryAndRelease(key:String)
GET     /:key                       controllers.Application.simpleGet(key:String)
POST    /                           controllers.Application.create()
DELETE  /:key                       controllers.Application.delete(key:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
